<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit The info of <%= house.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/houses/<%= house._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="house[name]" value="<%= house.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="house[image]" value="<%= house.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="house[description]" value="<%= house.description %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="house[price]" value="<%= house.price %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="house[location]" id="location" value="<%= house.location %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
                
            </form>
            <a href="/houses">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>